broker_id=-1
dc=-1
cat /etc/yandex/statbox-kafka/kafka-hosts | while read host id dc
do
	if [ r`hostname -f` == r"$host" ]
	then
		echo -n $id > /tmp/broker_id
		echo -n $dc > /tmp/dc
	fi
done

if [ -f /tmp/broker_id ]
then
	broker_id=`cat /tmp/broker_id`
	dc=`cat /tmp/dc`
fi

if [ -f /tmp/dc ]
then
	dc=`cat /tmp/dc`
fi

if [ $broker_id == -1 ]
then
	echo "unknown broker id"
	exit -1
fi

if [ $dc == -1 ]
then
	echo "unknown DC"
	exit -1
fi

echo "my broker id $broker_id, DC is $dc"

