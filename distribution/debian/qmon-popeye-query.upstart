description "QMon Popeye Slicer Service"
setuid qmon-popeye-query
limit nofile 30000 30000
console log
env QMON_CONF=/etc/yandex/qmon-popeye-query/conf
env QMON_LOGDIR=/var/log/qmon-popeye-query
pre-start script
  if [ ! -f $QMON_CONF/query.conf ] ; then
    stop ; exit 0
  fi
end script
exec /usr/share/qmon-popeye-query/bin/start query -c $QMON_CONF/query.conf
